{% extends "TSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

<div class="row">
    <div class="span3">
        <ul id="resources">
            {% for resource, amount in player.resources %}
            <li class="resource resource-{{ resource }}">{{ amount }}</li>
            {% endfor %}
        </ul>
        <ul class="nav nav-tabs nav-stacked">
        {% for tab in tabs %}
            <li><a href="#">{{ tab }}</a></li>
        {% endfor %}
        </ul>
        <div class="copyright center-text">Tentacle Soft &copy; <script>document.write(new Date().getFullYear().toString());</script></div>
    </div>
    <div class="span9">
        <div id="game"></div>
    </div>
</div>

{% endblock %}