<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="siege_craft.service.user_info.class">TS\Bundle\SiegeCraftBundle\Service\UserInfoService</parameter>
        <parameter key="siege_craft.listener.registration_complete.class">TS\Bundle\SiegeCraftBundle\EventListener\RegistrationComplete</parameter>
    </parameters>

    <services>
        <service id="siege_craft.service.user_info" class="%siege_craft.service.user_info.class%" />
        <service id="siege_craft.listener.registration_complete" class="%siege_craft.listener.registration_complete.class%" >
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
