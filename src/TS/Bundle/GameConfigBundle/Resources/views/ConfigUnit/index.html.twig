{% extends '::base.html.twig' %}

{% block body %}
<h1>ConfigUnit list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Baseattack</th>
            <th>Basedefense</th>
            <th>Basehealth</th>
            <th>Productiontime</th>
            <th>Costs</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('configunit_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.baseAttack }}</td>
            <td>{{ entity.baseDefense }}</td>
            <td>{{ entity.baseHealth }}</td>
            <td>{{ entity.productionTime | date('s') }}</td>
            {% for cost in entity.costs %}
                <td>{{ cost }}</td>
            {% endfor %}
            <td>
                <ul>
                    <li>
                        <a href="{{ path('configunit_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('configunit_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('configunit_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}