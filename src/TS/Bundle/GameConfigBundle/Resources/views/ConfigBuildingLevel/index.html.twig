{% extends '::base.html.twig' %}

{% block body %}

<h1>ConfigBuildingLevel list</h1>
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Level</th>
            <th>Costs</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('configbuildinglevel_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.level }}</td>
            {% for cost in entity.costs %}
                <td>{{ cost }}</td>
            {% endfor %}
            <td>
                <ul>
                    <li>
                        <a href="{{ path('configbuildinglevel_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('configbuildinglevel_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('configbuildinglevel_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
