<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ 'siegecraft.title'|trans({}, 'TSSiegeCraftBundle') }}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">

            {% stylesheets output='bundles/tssiegecraft/css/siegecraft.css' filter='?yui_css'
                '@TSSiegeCraftBundle/Resources/public/css/main.css'
            %}
            <link href="{{ asset_url }}" rel="stylesheet" type="text/css" media="screen" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            <div class="navbar">
                <div class="navbar-inner">
                    <a class="brand" href="#">{{ 'siegecraft.title'|trans({}, 'TSSiegeCraftBundle') }}</a>
                    {% block navbar %}{% endblock %}
                </div>
            </div>
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
            <script>window.jQuery || document.write('<script src="{{ asset('js/jquery.js') }}"><\/script>')</script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>

            {# Disabled this while we don't have a generic javascript
            {% javascripts output='bundles/tssiegecraft/js/siegecraft.js' filter='?yui_js'

            %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}#}
        {% endblock %}
    </body>
</html>
